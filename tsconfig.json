{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "NodeNext",                               
    // "rootDir": "./src",                                 
    "moduleResolution": "NodeNext",                    
    "baseUrl": "./src",                                
    "paths": { 
      "*": ["src/types/*"]
    },                            
    "sourceMap": true,
         
    // "typeRoots": ["./node_modules/@types", "src/types"],                                 
    // "types": ["node"],
    "resolveJsonModule": true,                     
    "outDir": "./dist",                             
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                   
    "skipLibCheck": true                              
  },
    "include": ["./**/*"],
  "exclude": ["node_modules"] 
}

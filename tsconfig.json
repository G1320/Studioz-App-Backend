{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "NodeNext",                               
    "moduleResolution": "NodeNext",                    
    "rootDir": "./src",                                 
    "typeRoots": ["./node_modules/@types", "./src/types"],                        
    "resolveJsonModule": true,                     
    "outDir": "./dist",                      
    "allowJs": true,       
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                   
    "skipLibCheck": true                              
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]

}

{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "NodeNext",                               
    "rootDir": "./src",                                 
    "moduleResolution": "NodeNext",                    
    "baseUrl": "./src",                                
    "paths": { 
      "*": ["src/types/*"]
    },                                     
    "typeRoots": ["./node_modules/@types", "src/types"],                                 
    "types": ["node"],
    "resolveJsonModule": true,                     
    "outDir": "./src/dist",                             
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                   
    "skipLibCheck": true                              
  },
    "include": ["./**/*.ts"],
  "exclude": ["node_modules"] 
}

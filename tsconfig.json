{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/types/custom.d.ts"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/api/handlers/paypalHandler.js", "src/api/handlers/PPorderHandlerSDK.js", "src/api/handlers/PPSellerOnboardingHandler.js", "src/api/handlers/PPAuthHandler.ts", "src/api/routes/bluesnapRoutes.js"],
  "exclude": ["node_modules", "src/tests"]
}

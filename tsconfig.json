{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "NodeNext",                               
    "rootDir": "./src",                                 
    "moduleResolution": "NodeNext",                    
    "baseUrl": "./src",                                                             
    "typeRoots": ["./node_modules/@types", "src/types"],                                 
    "resolveJsonModule": true,                     
    "outDir": "./dist",                             
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                   
    "skipLibCheck": true                              
  },
    "include": ["src/**/*.ts"],
  "exclude": ["node_modules"] 
}
